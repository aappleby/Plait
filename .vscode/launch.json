// clang-format off
{
  "configurations": [
    {
      "name": "Plait",
      "preLaunchTask": "build_plait",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/Plait",
      "cwd": "${workspaceFolder}",
      "setupCommands": [
        { // Display content in STL containers pretty
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
// clang-format on
